# Configurações do Dify
DIFY_API_KEY=sua_chave_api_aqui
DIFY_BASE_URL=https://api.dify.ai/v1
DIFY_KNOWLEDGE_BASE_ID=seu_id_da_base_aqui

# Configurações do WordPress
WP_URL=https://descomplicar.pt
WP_USERNAME=seu_usuario
WP_PASSWORD=sua_senha

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=geradorwp.log

# Configurações de Cache
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hora em segundos

# Configurações de Retry
MAX_RETRIES=3
RETRY_DELAY=5  # segundos

# Configurações de Imagem
IMAGE_WIDTH=1920
IMAGE_HEIGHT=1080
IMAGE_QUALITY=90
IMAGE_FORMAT=WebP